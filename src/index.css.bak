@tailwind base;
@tailwind components;
@tailwind utilities;

/* utilit√°rios */
:root { color-scheme: light dark; }

.card { @apply rounded-2xl shadow-sm border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900; }
.card-header { @apply px-4 pt-4 pb-2 flex items-center justify-between; }
.card-title { @apply text-sm font-semibold text-neutral-800 dark:text-neutral-100; }
.card-content { @apply px-4 pb-4 text-sm text-neutral-700 dark:text-neutral-300; }

.btn { @apply inline-flex items-center gap-2 rounded-xl border border-neutral-300 dark:border-neutral-700 px-3 py-2 text-sm hover:bg-neutral-100 dark:hover:bg-neutral-800; }
